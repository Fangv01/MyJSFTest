<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_3.xsd"
    version="2.3">
    <managed-bean>
    	<managed-bean-name>sc</managed-bean-name>
    	<managed-bean-class>jsf_pages.SimpleController</managed-bean-class>
    	<managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
    	<managed-bean-name>mh</managed-bean-name>
    	<managed-bean-class>jsf_pages.MessageHandler</managed-bean-class>
    	<managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>too-short</from-outcome>
			<to-view-id>/error-message.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/start-page1.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>page1</from-outcome>
			<to-view-id>/result1.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>page2</from-outcome>
			<to-view-id>/result2.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/start-page2.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>page1</from-outcome>
			<to-view-id>/result3.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>page2</from-outcome>
			<to-view-id>/result3.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
</faces-config>
